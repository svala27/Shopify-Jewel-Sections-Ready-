                    </ul>
                </div>
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>

    {% if banner_first_style != blank %}
    <div class="col-12 col-xl-5 col-right-st2">
        <div class="mega-banner featured_col">
            {% if banner_first_style != blank or banner_second_style != blank %}
            <div class="mega-col{% if banner_third_style != blank %} col-left{% endif %}">
                {% if banner_first_style != blank %}
                <div class="image-feature">
                    <a href="{{link_button_col}}" class="animation-scale animation-border" href="{{ link_banner_first_style }}" title="">
                        <img class="lazyload" src="{{ 'loading.svg' | asset_url }}" data-src="{{ banner_first_style | img_url :'210x' }}" alt="" data-image>
                    </a>
                </div>
                {% endif %}

                {% if title_feature_col != blank or content_feture_col != blank %}
                <div class="content-feature-mega">
                    <h4 class="title"> {{title_feature_col}}</h4>
                    <div class="content"> {{content_feture_col}}</div>
                    <a href="{{link_button_col}}" class="btn btn-one" style="color: {{text_color_bt_col}};background: {{back_color_bt_col}}; border-color: {{border_color_bt_col}}">
                        {{title_button_col}}
                    </a>
                </div>
                {% endif %}
            </div>
            {% endif %}
        </div>
    </div>
    {% endif %}
    {% if text_mega != blank %}
        <div class="mega-text" style="background:{{back_mega_text}}; color: {{color_mega_text}}">
            {{text_mega}}
        </div>
    {% endif %}


