<div class="row">
    {% if block_style == "style_1" %}
    <div class="col-12 {% if banner_first_style != blank or featured_product_1 != blank %}{% if banner_first_style == blank or featured_product == blank %}col-xl-7{% else %}col-xl-7{% endif %}{% else %}col-xl-12{% endif %}">
        <div class="row" data-masonry='{ "itemSelector": "[data-gridItem]", "columnWidth": ".grid-sizer" }'>
            <div class="grid-sizer"></div>

            {% for l in linklists[link_child].links %}
            <div data-gridItem class="menu-lv-2 inner{% if linklists[link.handle] != empty %} dropdown{% endif %} col-12 {% if banner_first_style != blank or featured_product_1 != blank %}col-xl-4{% else %}col5{% endif %} {% if enable_style_1_rows_4 %} four-items {% else %} no-item-four{% endif %}">
                <!-- Menu level 2 -->
              <div class="rlte">  
              <a {%if linklists[link.handle] != empty %}class="menu__moblie {% unless linklists[l.handle] != empty %}no-dropdown{% endunless %}" {% endif %} href="{{ l.url }}" class="current">
                    <span>{{l.title}}</span>

                    {% if linklists[l.handle] != empty %}
                    <span class="icon-dropdown" data-toggle-menu-mb>
                         <svg class="icon"><use xlink:href="#icon_right" />
                    </span>
                    {% endif %}
                </a>
              </div>
                {% if linklists[l.handle] != empty %}
                <div class="sub-menu-mobile menu-mb-translate">
                    <div class="menu-mb-title">
                        <span class="icon-dropdown">
                         <svg class="icon"><use xlink:href="#icon_left" />
                        </span>
                        <span>{{l.title}}</span>
                    </div>

                    <ul class="site-nav-dropdown">
                       <li class="menu-lv-3 hide_pc">
                         <a href="{{ l.url }}" class="nav-action nav-action--end" aria-label="link">
                           <span >{{ 'layout.navigation.menu_all' | t }} {{ l.title }}</span>
                         </a>
                      </li>
                        {% for child_l in linklists[l.handle].links %}
                        <!-- Menu level 3 -->
                        <li class="menu-lv-3">
                            <a href="{{ child_l.url }}" {% if child_l.active %}class="current"{% endif %}>
                               <span> {{child_l.title}}</span>
                            </a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>

    {% if banner_first_style != blank or banner_second_style != blank or featured_product_1 != blank %}
    <div class="col-12 {% if banner_first_style == blank or  banner_second_style == blank or featured_product == blank %}col-xl-5{% else%}col-xl-5{% endif %}">
        <div class="mega-banner">
            {% if featured_product_1 != blank %}
            <div class="mega-col  mega-feature-product{% if banner_first_style != blank %} col-left{% endif %}">
                {% if title_featured_product != blank %}
                <h3 class="title">
                    {{title_featured_product }}
                </h3>
                {% endif %}

              <div class="featuredProductCarousel">
                {%assign product = all_products[featured_product_1]%}
                <div class="product-item" id="product-{{ product.id }}">
                  {%render 'mega-menu-product-grid', product : product  %}
                </div>
                {%if featured_product_2 != blank %}
                {%assign product = all_products[featured_product_2]%}
                <div class="product-item" id="product-{{ product.id }}">
                  {%render 'mega-menu-product-grid', product : product  %}
                </div>
                {%endif%}
                {%if featured_product_3 != blank %}
                {%assign product = all_products[featured_product_3]%}
                <div class="product-item" id="product-{{ product.id }}">
                  {%render 'mega-menu-product-grid', product : product  %}
                </div>
                {%endif%}
              </div>
            </div>
            {% endif %}

            {% if banner_first_style != blank or banner_second_style != blank %}
            <div class="mega-col maga-banner-right{% if link_banner_first_style != blank %} col-left{% endif %}">
                {% if banner_first_style != blank %}
                <a class="animation-scale animation-border" href="{{ link_banner_first_style }}" title="">
                    <img class="lazyload" src="{{ 'loading.svg' | asset_url }}" data-src="{{ banner_first_style | img_url :'210x' }}" alt="" data-image>
                </a>
                {% endif %}

                {% if banner_second_style != blank %}
                <a class="animation-scale animation-border" href="{{ link_banner_second_style }}" title="">
                     <img class="lazyload" src="{{ 'loading.svg' | asset_url }}" data-src="{{ banner_second_style | img_url :'210x' }}" alt="" data-image>
                </a>
                {% endif %}
            </div>
            {% endif %}
        </div>
    </div>
    {% endif %}


    {% elsif block_style == "style_2" %}
