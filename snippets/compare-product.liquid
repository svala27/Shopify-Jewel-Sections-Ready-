<div class="product-compare-btn {% if settings.show_product_compare_mb %}compare-btn-mb{% endif %}" data-icon-compare data-compare-product-handle="{{ link }}" data-id="{{ id }}">
    <input id="compare_{{ id }}" class="compare" type="checkbox" name="compare">
    <label for="compare_{{ id }}">
        <span class="compare_grid">{{ 'general.compare.title' | t }}</span>
        <span class="compare_list">{{ 'general.compare.title_list' | t }}</span>
    </label>
</div>