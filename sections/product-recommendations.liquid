{%- if section.settings.show_product_recommendations -%}
{%- assign product_limit = product_limit | default: section.settings.product_limit -%}
<div data-limit-pr-recoment='{{product_limit}}'></div>
    {%- if recommendations.performed -%}
        {%- if recommendations.products_count > 0 -%}
            {% case section.settings.column %}
                {% when 1 %}
                    {%- assign column = '1' -%}
                {% when 2 %}
                    {%- assign column = '2' -%}
                {% when 3 %}
                    {%- assign column = '3' -%}
                {% when 4 %}
                    {%- assign column = '4' -%}
                {% when 5 %}
                    {%- assign column = '5' -%}
            {% endcase %}

            {%- assign carousel = carousel | default: section.settings.products_layout -%}
            {%- assign arrows = arrows | default: section.settings.carousel-arrows -%}
            {%- assign row = row | default: section.settings.row -%}
            {%- assign dots = dots | default: section.settings.carousel-dots -%}
            {%- assign title_border = title_border | default: section.settings.title_border -%}

            <div class="product-recommendations__inner halo-section {% unless section.settings.border-top %} no-border-top{% endunless %} ">
                <div class="container">
                    <div class="halo-special-collection-layout">
                        {% if section.settings.title != blank %}
                            <div class="section-header">
                                <h2>{{section.settings.title}}</h2>
                            </div>
                        {% endif %}
                    </div>
                    <div class="halo-row halo-row-custom column-{{ column }} {%if carousel == 'carousel' %}collection-carousel{% endif %}"
                        {%if carousel == 'carousel' %}
                            data-slick='{
                                "dots": {{ dots }},
                                "rows": 1,
                                "arrows": true,
                                "infinite": false,
                                "mobileFirst": true,
                                "adaptiveHeight": true,
                                "slidesToShow": 2,
                                "slidesToScroll": 2,
                                "prevArrow": "<div class=&apos;slick-prev slick-arrow&apos;><svg class=&apos;icon&apos;><use xlink:href=&apos;#icon-chevron-left&apos; /></svg></div>", 
                                "nextArrow": "<div class=&apos;slick-next slick-arrow&apos;><svg class=&apos;icon&apos;><use xlink:href=&apos;#icon-chevron-right&apos; /></svg></div>",
                                "responsive": [
                                    {
                                        "breakpoint": 1100,
                                        "settings": {
                                            "rows": 1,
                                            "slidesToShow": {{ column }},
                                            "slidesToScroll": {{ column }}
                                        }
                                    },
                                    {
                                        "breakpoint": 992,
                                        "settings": {
                                            "slidesToScroll": 4,
                                            "slidesToShow": 4
                                        }
                                    },
                                    {
                                        "breakpoint": 551,
                                        "settings": {
                                            "slidesToScroll": 3,
                                            "slidesToShow": 3
                                        }
                                    }
                                ]
                            }'
                        {% endif %}>
                        {%if carousel == 'carousel' %}
                            {% for product in recommendations.products %}
                                <div class="halo-item">
                                    {% render 'product-card-grid-home' with product as product, serial: forloop.index %}
                                </div>
                            {% endfor %}
                        {% else  %}
                            {% for product in recommendations.products limit: product_limit %}
                                <div class="halo-item">
                                    {% render 'product-card-grid-home' with product as product, serial: forloop.index %}
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        {%- endif -%}
    {%- else  -%}
        <div data-base-url="{{ routes.product_recommendations_url }}" data-product-id="{{ product.id }}" data-section-id="{{ section.id }}" data-section-type="product-recommendations"></div>
    {%- endif -%}
{%- endif -%}

{% if section.settings.custom_color %}
    <style>
    .product-recommendations__inner{
        border-color: {{section.settings.color_border_rc}};
        padding-top: {{section.settings.padding_top}};
        padding-bottom: {{section.settings.padding_bottom}};
    }
    .product-recommendations__inner .section-header h2{
         color: {{section.settings.color_title_rc}};
     }
        
    </style>
{% endif %}

{% schema %}
{
    "name": "Product recommendations",
    "settings": [
        {
            "type": "header",
            "content": "Section Layout"
        },
        {
            "type": "checkbox",
            "id": "show_product_recommendations",
            "label": "Show dynamic recommendations",
            "info": "Dynamic recommendations change and improve with time. [Learn more](https://help.shopify.com/en/themes/development/recommended-products)",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "border-top",
            "label": "show border top",
            "default": false
        },
        {
            "type":"header",
            "content":"Cusstom Color"
        },
        {
            "type":"checkbox",
            "id":"custom_color",
            "label":"Enable?",
            "default":false
        },
        {
            "type":"color",
            "id":"color_border_rc",
            "label":" Color Border"
        },
        {
            "type":"color",
            "id":"color_title_rc",
            "label":" Color Title"
        },
        {
            "type": "range",
            "id": "padding_top",
            "label": "Spacing Top",
            "default": 5,
            "min": 0,
            "max": 10,
            "step": 1
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "label": "Spacing bottom",
            "default": 3,
            "min": 0,
            "max": 10,
            "step": 1
        },
        {
            "type": "header",
            "content": "Heading Section"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Related Products"
        },
        {
            "type": "header",
            "content": "Products Layout"
        },
        {
            "type": "select",
            "id": "products_layout",
            "label": "Layout",
            "default": "carousel",
            "options": [
                {
                    "value": "grid",
                    "label": "Grid"
                },
                {
                    "value": "carousel",
                    "label": "Carousel"
                }
            ]
        },
        {
            "type": "range",
            "id": "column",
            "label": "Column",
            "min": 1,
            "max": 5,
            "step": 1,
            "default": 4
        },
        {
            "type": "range",
            "id": "product_limit",
            "label": "Product Limit",
            "min": 1,
            "max": 20,
            "step": 1,
            "default": 7
        },
        {
            "type": "checkbox",
            "id": "carousel-arrows",
            "label": "show arrows (Layout carousel)",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "carousel-dots",
            "label": "show dots (Layout carousel)",
            "default": false
        }
    ]
}
{% endschema %}
