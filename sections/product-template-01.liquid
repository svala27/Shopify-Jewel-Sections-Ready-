    "settings": [
        {
            "type": "header",
            "content": "Product Image"
        },
        {
            "type": "checkbox",
            "id": "enable_zoom",
            "label": "Enable image zoom",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "enable_text_zoom",
            "label": "Enable text zoom",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "enable_fancybox",
            "label": "Enable image gallery popup",
            "default": true
        },
        
        {
            "type": "header",
            "content": "Color Compare Popup"
        },
        {
            "type": "checkbox",
