{% if section.settings.display_sub_banner and section.blocks.size > 0 %}
<div class="home-sub-banner home-sub-banner-style-two sub-banner-{{ section.blocks.size }}" id="sub-banner-{{section.id}}">
    <div class="container">
        <div class="row">
            {% for block in section.blocks %}
            {% case section.blocks.size %}
                {% when 1 %}
                {%- assign column_size = 'col-12 one-block' -%}
                {% when 2 %}
                {%- assign column_size = 'col-12 col-sm-6 two-blocks' -%}
            {% endcase %}
                
            <div class="item {{ column_size }}">
                <div class="sub-banner banner-item animation-scale animation-border">
                    <div class="img-box">
                        <a href="{{ block.settings.link }}" class="">
                            {% if block.settings.image != blank %}
                            {%- assign img_url = block.settings.image | img_url: 'master' -%}
                                 <img class="lazyload" src="{{ 'loading.svg' | asset_url }}" data-src="{{ img_url }}" alt="" data-image>
                            {% else %}
                            <div class="no-image" style="padding-top:50%">
                              <span> 570 x 290px</span>
                            </div>   
                            {% endif %}
                        </a>
                    </div>

                    {% if block.settings.title != blank and block.settings.image != blank %}
                    <div class="content-box">
                        <p class="sub-title">
                            {{block.settings.sub_title}}
                        </p>
                        <h3 class="banner-title">
                            {{block.settings.title}}
                        </h3>
                        <a class="btn btn-one">
                            {{block.settings.title_link}}
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
    {% if section.settings.custom_color %}
        <style>
            {% assign font_size_title =  section.settings.font_size_title %}
            {% assign margin_bottom =  section.settings.margin_bottom %}
            #sub-banner-{{section.id}} .banner-item .banner-title{
                color: {{ section.settings.color_title }};
            }
            #sub-banner-{{section.id}} .banner-item .content-box .sub-title{
                color: {{ section.settings.color_sub_title }};
            }
            #sub-banner-{{section.id}} .banner-item .content-box .sub-title span:before{
                background: {{ section.settings.color_sub_title }};
            }
            #sub-banner-{{section.id}} .banner-item .btn{
               color: {{ section.settings.color_button }};
               border-color: {{ section.settings.color_button }};
            }
            #sub-banner-{{section.id}} .banner-item .btn:hover{
               color: {{ section.settings.color_botton_hover }};
               border-color:{{ section.settings.color_botton_hover}};
            }

            @media (max-width: 767px) {
                #sub-banner-{{section.id}} {
                    margin-bottom: {{ section.settings.margin_bottom_mb }}px;
                }
            }

            @media (min-width: 768px) and (max-width: 1199px) {
                #sub-banner-{{section.id}} {
                    margin-bottom: {{ section.settings.margin_bottom_tab }}px;
                }
            }
            
            @media (min-width: 1200px) {
                #sub-banner-{{section.id}} .banner-title {
                    font-size: {{ font_size_title }};
                }
                
                #sub-banner-{{section.id}} {
                    margin-bottom: {{ margin_bottom }}px;
                }
            }   
        </style>
    {% endif %}
{% endif %}


