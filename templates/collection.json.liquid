{% layout none %}
<div class="halo-row"> 
{% if collection.products_count > 0 %}    
    {% for product in collection.products limit: 6 %}
    <div class="halo-item"> 
        {% render 'product-card-list' with product as product%}
    </div>
    {% endfor%}
{% else %}
    <div class="halo-item halo-item-full">
        {{ 'collections.general.no_matches' | t }}
    </div>
{% endif %}
</div>